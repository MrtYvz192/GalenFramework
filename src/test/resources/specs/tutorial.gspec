
@objects

    header  #header
        headline    .middle-wrapper
        logo        #header-logo
    
    menu        #menu
        tabs    ul

    welcomePanel    #welcome-page
    button          button
    link            #welcome-page p a  
    footer          #footer
        signature   xpath   //div[@class="footer-signature"]


= Main Section =

    header:
        inside screen 0px top left right
        height 70px

    header.headline:
        height 69px

    header.logo:
        inside header.headline 0px left
        height 48px
        width 48px

    menu:
        height 63px
        aligned vertically all header

    menu.tabs: 
        height 63px


    welcomePanel:
        height 345px
        near menu ~20px bottom
        centered horizontally inside screen

    footer:
        aligned vertically all menu
        near welcomePanel 85px bottom

    footer.signature:
        text is "Copyright (c) 2015"
